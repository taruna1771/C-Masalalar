using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Collections;

namespace TRIAL
{
    public class Class1
    {
        static void Main(string[] args)
        {
        
            Random rand = new Random();

            const string chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
            // Rastgele metnin uzunluğu
            const int length = 10;

            // Rastgele sayı üreteci oluşturun
            Random random = new Random();

            // Rastgele metni oluşturun
            
 
            string joylashuv = @"D:\test";
            string[] files = Directory.GetFiles(joylashuv);

            foreach (string file in files)
            {
                File.Delete(file);
            }

            string[] fileArray = Directory.GetDirectories(joylashuv);

            for (int i = 0; i < fileArray.Length; i++)
            {
                string bag = fileArray[i];
                var dir = new DirectoryInfo(bag);
                Directory.Delete(bag, true);
            }
            ArrayList mas = new ArrayList();
            joylashuv = joylashuv + @"\";
            for (int i = 0; i < 10; i++)
            {
                string randomText = new string(Enumerable.Repeat(chars, length)
                 .Select(s => s[random.Next(s.Length)]).ToArray());
                string ss = joylashuv + randomText;
                mas.Add(ss);
                Directory.CreateDirectory(ss);
            }

            // fay ichida ochish
            for (int i = 0; i < mas.Count; i++)
            {
                string ss = mas[i].ToString() + @"\";
                for (int j = 0; j < 15; j++)
                {
                    string randomText = new string(Enumerable.Repeat(chars, length)
                .Select(s => s[random.Next(s.Length)]).ToArray());
                    string kk = ss+ randomText;
                   
                    Directory.CreateDirectory(kk);
                }
            }



            Console.ReadLine();
        }
    }
}
